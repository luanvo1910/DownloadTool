{
  "name": "simple-downloader",
  "version": "1.0.2",
  "description": "Ứng dụng tải video, audio và thumbnail",
  "main": "main.js",
  "author": "LuanVo",
  "repository": "https://github.com/luanvo1910/DownloadTool",
  "scripts": {
    "start": "concurrently \"npm run dev --prefix renderer\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build --prefix renderer && electron-builder",
    "postinstall": "npm install --prefix renderer",
    "publish": "npm run build --prefix renderer && electron-builder --publish always"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.luanvo.redbidownloader",
    "productName": "Redbi Video Downloader",
    "files": [
      "main.js",
      "preload.js",
      "renderer/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "./resources",
        "to": ".",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "luanvo1910",
      "repo": "DownloadTool"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
